# ===============================================
# Site Agent - Конфигурация (пример)
# ===============================================

# WebSocket URL сайта
SITE_WS_URL=wss://site.example.com/ws/pull

# JWT токен для авторизации (короткоживущий)
# Выдается сайтом, периодически обновляется
AUTH_JWT=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# HMAC секрет (общий с сайтом)
# Генерация: openssl rand -hex 32
HMAC_SECRET=your_hmac_secret_here_64_chars_hex

# AES-GCM ключ (base64 encoded 256-bit key)
# Генерация: openssl rand -base64 32
AES_GCM_KEY=your_base64_aes_key_here_44_chars

# Локальные API endpoints
LOCAL_REGISTER_URL=http://127.0.0.1:8082/register
LOCAL_STATUS_URL=http://127.0.0.1:9000/internal/constants

# Таймауты
REQUEST_TIMEOUT=8.0
WS_PING_INTERVAL=20.0

# Backoff для реконнекта (секунды)
RECONNECT_BACKOFF_MIN=3.0
RECONNECT_BACKOFF_MAX=30.0

# TTL задачи (секунды)
JOB_TTL=45

# Логирование
LOG_LEVEL=INFO

