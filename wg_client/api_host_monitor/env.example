# API_HOST_MONITOR Environment Configuration
# Скопируйте этот файл в .env и настройте под свои нужды

# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ
# =============================================================================

# Домен для доступа к сервисам (для Traefik)
DOMAIN=wg-hub.local

# Временная зона
TZ=Europe/Moscow

# =============================================================================
# PORTAINER
# =============================================================================

# Секретный ключ для Portainer Agent
PORTAINER_AGENT_SECRET=wg_hub_monitoring_secret

# =============================================================================
# NETDATA
# =============================================================================

# Токен для подключения к Netdata Cloud (опционально)
NETDATA_CLAIM_TOKEN=wg_hub_netdata_token
NETDATA_CLAIM_URL=https://app.netdata.cloud

# =============================================================================
# PGADMIN
# =============================================================================

# Учетные данные pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@wg-hub.local
PGADMIN_DEFAULT_PASSWORD=wg_hub_admin

# =============================================================================
# METABASE
# =============================================================================

# Настройки БД для Metabase
MB_DB_TYPE=postgres
MB_DB_DBNAME=metabase
MB_DB_PORT=5432
MB_DB_USER=metabase
MB_DB_PASS=metabase_password
MB_DB_HOST=metabase-db

# =============================================================================
# WIREGUARD EASY
# =============================================================================

# Настройки WireGuard
WG_HOST=wg-hub.local
WG_PASSWORD=wg_hub_password
WG_DEFAULT_ADDRESS=10.8.0.x
WG_DEFAULT_DNS=1.1.1.1
WG_MTU=1420
WG_ALLOWED_IPS=192.168.15.0/24,10.0.0.0/8
WG_PERSISTENT_KEEPALIVE=25

# =============================================================================
# TTYD (ВЕБ-ТЕРМИНАЛ)
# =============================================================================

# Учетные данные для терминала
TTYD_USERNAME=admin
TTYD_PASSWORD=wg_hub_password

# =============================================================================
# POSTGRESQL (METABASE)
# =============================================================================

# Настройки БД для Metabase
POSTGRES_DB=metabase
POSTGRES_USER=metabase
POSTGRES_PASSWORD=metabase_password

# =============================================================================
# UPTIME KUMA
# =============================================================================

# Настройки уведомлений (опционально)
# UPTIME_KUMA_NOTIFICATION_EMAIL=admin@wg-hub.local
# UPTIME_KUMA_NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/...

# =============================================================================
# HOMARR
# =============================================================================

# Настройки старт-страницы
HOMARR_TITLE=WG_HUB Dashboard
HOMARR_DESCRIPTION=Централизованная панель управления

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================

# Измените эти пароли в продакшене!
DEFAULT_ADMIN_PASSWORD=wg_hub_admin
DEFAULT_USER_PASSWORD=wg_hub_user

# =============================================================================
# РЕСУРСЫ
# =============================================================================

# Ограничения ресурсов (опционально)
# POSTGRES_MAX_CONNECTIONS=20
# POSTGRES_SHARED_BUFFERS=64MB
# POSTGRES_WORK_MEM=4MB

# =============================================================================
# ЛОГИРОВАНИЕ
# =============================================================================

# Уровень логирования
LOG_LEVEL=INFO

# Ротация логов (в днях)
LOG_RETENTION_DAYS=7
